{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "template",
    "bin",
    "docs/snippets",
    "scripts"
  ],
  "types": [
    "node"
  ]
}